<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dip"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    <ImageButton
        android:id="@+id/imbtn_mini_profile"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:src="@drawable/camera_icon_selector"
        android:background="@color/transparent"
        android:layout_weight="1"
        android:layout_marginRight="10dip"/>

    <TextView
        android:id="@+id/tv_story_name"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:text="seungyeung1"
        android:layout_weight="9"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dip"
        >
        <ImageView
            android:id="@+id/iv_story_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:scaleType="fitXY"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal"
          >
        <ImageButton
            android:id="@+id/imbtn_story_like"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:src="@drawable/heart_icon_normal"
            android:background="@color/transparent"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/imbtn_story_comment"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:src="@drawable/speechbubble_icon_normal"
            android:background="@color/transparent"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/imbtn_story_send_meessage"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:src="@drawable/send_icon_normal"
            android:background="@color/transparent"
            android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="center_vertical|right">
        <ImageButton
            android:id="@+id/imbtn_story_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bookmark_icon_normal"
            android:background="@color/transparent"
            android:layout_marginRight="10dip"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rl_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
      />
       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/iv_comment_profile"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:src="@drawable/camera_icon_selector"
                android:background="@color/transparent"
                android:layout_weight="1"
                android:paddingBottom="10dip"
                android:layout_marginRight="10dip"/>
            <EditText
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:paddingBottom="10dip"
                android:background="@color/transparent"/>
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>
